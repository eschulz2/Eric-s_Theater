<div class="row">
	<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
		<%= simple_form_for @showing do |f| %>
		  
		  <%= f.input :title, label: "Movie Title" %>
			<%= f.input :time, as: :datetime %>
		  <%= f.input :seat_count %>
		  <%= f.input :auditorium, collection: [ 1,2,3 ] %>
		  <%= f.button :submit %>
		<% end %>
	</div>
</div>